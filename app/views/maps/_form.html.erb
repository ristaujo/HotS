<div class='row'>
  <div class="col-md-8 col-xs-12">
    <div class="white-box">
      <%= form_with(model: map, local: true, class: 'form-horizontal form-material') do |form| %>
        
        <div class="form-group">
          <%= form.label :name, class: 'col-sm-12' %>
          <div class="col-sm-12">
            <%= form.text_field :name, class: 'form-control', placeholder: 'Name' %>
          </div>
        </div>

        <div class="form-group">
          <%= form.label :description, class: 'col-sm-12' %>
          <div class="col-sm-12">
            <%= form.text_area :description, class: 'form-control form-control-line', placeholder: 'Information' %>
          </div>
        </div>
        
        <div class="form-group">
          <div class="col-sm-12">
            <button class="btn btn-success" type="submit">Submit</button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>