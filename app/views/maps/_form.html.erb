<div class='row'>
  <%= form_with(model: map, local: true, class: 'form-horizontal form-material') do |form| %>
    <div class="col-md-4 col-xs-12">
      <div class="white-box">
        <div class="user-bg">
          <%= image_tag map.image_url(:thumb), width: '100%' if map.image? %>
          <div class="overlay-box">
            <div class="user-content">
              <h4 class="text-white"><%= map.name %></h4>
              <div class="text-center">
                <div class="col-sm-8 col-sm-offset-2">
                  <%= form.file_field :image %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-8 col-xs-12">
      <div class="white-box">
        <div class="form-group">
          <%= form.label :name, class: 'col-sm-12' %>
          <div class="col-sm-12">
            <%= form.text_field :name, class: 'form-control', placeholder: 'Name' %>
          </div>
        </div>

        <div class="form-group">
          <%= form.label :description, class: 'col-sm-12' %>
          <div class="col-sm-12">
            <%= form.text_area :description, class: 'form-control form-control-line', placeholder: 'Information' %>
          </div>
        </div>
        
        <div class="form-group">
          <div class="col-sm-12">
            <button class="btn btn-success" type="submit">Submit</button>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>