<p id="notice"><%= notice %></p>
<div class='panel panel-default'>
  <div class="panel-heading">
    <h1>
      Talents
      <%= link_to 'New Talent', new_talent_path, class: 'btn btn-sm btn-primary' %>
    </h1>
   </div>
   <div class='panel-body'>
      <table class ="table table-hover">
      <thead>
        <tr>
          <th colspan="1"></th>
          <th>Talent Name</th>
        </tr>
      </thead>

      <tbody>
        <% @talents.each do |talent| %>
          <tr>
            <td class='col-sm-2'>
              <div class='col-sm-1'>
                <%= link_to talent do%>
                  <i class='fa fa-eye'></i>
                <% end %>  
              </div>
              <div class='col-sm-1'>
                <%= link_to edit_talent_path(talent) do%>
                  <i class='fa fa-pencil'></i>
                <% end %>
              </div>
              <div class='col-sm-1'>
                <%= link_to talent, method: :delete, data: { confirm: 'Are you sure?' } do%>
                  <i class='fa fa-trash text-danger'></i>
                <% end %>
              </div>
            </td>
            <td><%= talent.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
   </div>
  </div>
