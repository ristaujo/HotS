<div class='row'>
  <%= form_with(model: hero, local: true, :html => {:multipart => true}, class: 'form-horizontal form-material') do |form| %>
    <div class="col-md-4 col-xs-12">
      <div class="white-box">
        <div class="user-bg">
          <img width="100%" alt="user" src="../plugins/images/large/img1.jpg">
          <div class="overlay-box">
            <div class="user-content">
              <a href="javascript:void(0)">
                <%= image_tag hero.image_url(:thumb), class: 'thumb-lg img-circle' if hero.image? %>
              </a>
              <h4 class="text-white"><%= hero.name %></h4>
              <div class="text-center">
                <div class="col-sm-8 col-sm-offset-2">
                  <%= form.file_field :image %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-8 col-xs-12">
      <div class="white-box">
        
        <div class="form-group">
          <%= form.label :name, class: 'col-sm-12' %>
          <div class="col-sm-12">
            <%= form.text_field :name, class: 'form-control form-control-line', placeholder: 'Name' %>
          </div>
        </div>
            
        <div class="form-group">
          <%= form.label :hero_class, class: 'col-sm-12' %>
          <div class="col-sm-12">
            <%= form.text_field :hero_class, class: 'form-control form-control-line', placeholder: 'Class' %>
          </div>
        </div>

        <div class="form-group">
          <%= form.label :description, class: 'col-sm-12' %>
          <div class="col-sm-12">
            <%= form.text_area :description, class: 'form-control form-control-line', placeholder: 'Description' %>
          </div>
        </div>
        
        <div class="form-group">
          <div class="col-sm-12">
            <button class="btn btn-success" type="submit">Submit</button>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>